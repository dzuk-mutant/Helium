@import '../../thorium'

body
  margin: 20px

.hithere
  background-color: #ddd
  margin-bottom: 40px


.gutter-clear
  overflow: hidden

.test
  background-color: #aaa
  > *
    background: #333
    color: #fff

.gutter
  gutter(20px, 20px)

.gutter-pad
  gutter-pad(20px, 20px)
  > *
    border: 1px solid #666

.gutter-seq
  gutter-seq(end, 40px, last)
  > *
    border: 1px solid #666

.gutter-seq-this
  > *
    gutter-seq-this(end, 40px, last)
    border: 1px solid #666


.flexgrid.row,
.flexblocks.row
  > *
    width: 100px
    height: 75px
