@import '../../thorium'


.hithere
  margin: 10px
  background-color: #ddd


.flextest
  background-color: #aaa
  gutter(20px, 20px)

  > *
    background-color: #333
    color: #fff



.spacer-end
  background-color: #999955

.gutter-clear
  overflow: hidden


.flexlinear
  > *
    width: 40px
    height: 40px



.flexblocks > *
  width: 200px



.flexgrid.row > *
  flex-basis: 200px



.flexcenter
  width: 100%
  height: 10vh

  > *
    width: 50px
    height: 50px
    background: #000000




.inner-content
  display: flex
  flex-wrap: wrap
  flex-direction: column
  gutter(10px, 0px)

  > *
    flex: 1 1 auto
    background: #000000
    color: #fff
