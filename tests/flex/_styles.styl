@import '../../_thorium/_thorium.styl'


.hithere
  margin: 10px
  background-color: #ddd


.flextest
  background-color: #aaa
  gutter(rpx(20), rpx(20))

  > *
    background-color: #333
    color: #fff



.spacer-end
  background-color: #999955

.gutter-clear
  overflow: hidden


.flexlinear
  > *
    width: rpx(40)
    height: rpx(40)



.flexblocks > *
  width: rpx(200)



.flexgrid.row > *
  flex-basis: rpx(200)



.flexcenter
  width: 100%
  height: 10vh

  > *
    width: rpx(50)
    height: rpx(50)
    background: #000000




.inner-content
  display: flex
  flex-wrap: wrap
  flex-direction: column
  gutter(10px, 0px)

  > *
    flex: 1 1 auto
    background: #000000
    color: #fff
