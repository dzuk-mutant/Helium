

[class*="ic-"], [class*="ico-"], [class*="icon-"]
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;





//	icon-size

/* 	use this to create quick sizes for icons and other things.

		icon class example:
		.size-9 { size(9px) }
*/

icon-size-sq(dimen)
	font-size: dimen
	width: dimen
	height: dimen

icon-size-xy(h, w)
	font-size: h
	width: w
	height: h

icon-size()
	len = length(arguments)

	if len == 2
		icon-size-xy(arguments[0], arguments[1])

	else if len == 1
		icon-size-sq(arguments[0])

	else
		xy-length-error("size()", len)
